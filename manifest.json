{
  "name": "Straight to Full-Size for Google Imagesâ„¢",
  "version": "2.0",
  "manifest_version": 2,

  "description": "Bypass preview & go directly to the full-size image from the Google Images search result page.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_icon": "icons/32.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*.google.com/search?*", "https://*.google.com/search?*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    //"scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "icons/32.png"
  ],
  "permissions": ["history", "tabs", "http://*/*"]
}